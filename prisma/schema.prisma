generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(255)
  email        String         @db.VarChar(255)
  password     String         @db.VarChar(100)
  bank_account bank_account[]
  profile      profile[]
}

model profile {
  id              Int    @id @default(autoincrement())
  user_id         user   @relation(fields: [userId], references: [id])
  userId          Int
  identify_type   String
  identify_number Int
  address         String
}

model bank_account {
  id                  Int           @id @default(autoincrement())
  user                user          @relation(fields: [user_id], references: [id])
  bank_name           String        @db.VarChar(255)
  bank_account_number Int
  balance             Int
  user_id             Int
  referredByUser      transaction[] @relation("referred_byUser")
  referredToUser      transaction?  @relation("referred_toUser")
}

model transaction {
  id                   Int           @id @default(autoincrement())
  sourceAccount        bank_account? @relation("referred_byUser", fields: [sourceAccountId], references: [id])
  destinationAccount   bank_account? @relation("referred_toUser", fields: [destinationAccountId], references: [id])
  amount               Int
  sourceAccountId      Int
  destinationAccountId Int           @unique
}
